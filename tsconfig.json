{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./types",
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src/**/*"]
}
